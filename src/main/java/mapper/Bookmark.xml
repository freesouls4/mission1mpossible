<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.bookmark">

    <!-- 북마크 추가 -->
    <insert id="insertBookmark" parameterType="Bookmark">
        <![CDATA[
        INSERT INTO bookmark (userIdx, missionIdx)
        VALUES (#{userIdx}, #{missionIdx})
        ]]>
    </insert>

    <!-- 사용자의 북마크 목록 가져오기 -->
    <select id="getBookmark" parameterType="Integer" resultType="Bookmark">
        <![CDATA[
        SELECT * FROM bookmark WHERE userIdx = #{userIdx}
        ]]>
    </select>

</mapper>
